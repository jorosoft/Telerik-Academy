<div class="container login">
    <div class="row">
        <div class="panel panel-primary">
            <div class="panel-body">                
                <div class="form-group">
                    <h2>Login</h2>
                </div>
                <div class="form-group">
                    <label class="control-label" for="signupUser">Username</label>
                    <input id="signupUser" type="text" maxlength="50" class="form-control">
                </div>
                <div class="form-group">
                    <label class="control-label" for="signupPassword">Password</label>
                    <input id="signupPassword" type="password" maxlength="25" class="form-control" placeholder="" length="40">
                </div>
                <div class="form-group">
                    <button id="btnLogin" type="submit" class="btn btn-info btn-block">Login</button>
                </div>
                <p>You haven't account? <a href="#/register">Register</a></p>                
            </div>
        </div>
    </div>
</div>		  