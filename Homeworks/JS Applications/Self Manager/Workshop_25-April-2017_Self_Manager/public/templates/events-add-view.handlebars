<div class="panel panel-default">
    <div class="panel-heading">Add new EVENT</div>
    <div class="panel-body">
        <div class="form-group">
            <label for="title">Title: </label>
            <input id="eventTitle" type="text" name="title" />
        </div>
        <div class="form-group">
            <label for="category">Category: </label>
            <input id="eventCategory" type="text" name="category" />
        </div>
        <div class="form-group">
            <label for="description">Description: </label>
            <input id="eventDescription" type="text" name="description" required />
        </div>
        <div class="form-group">
            <label for="date">Date: </label>
            <input id="eventDate" type="text" name="date" class="datepicker" />

        </div>
        <div class="form-group">
            <button id="btnAddEvent" type="submit" class="btn btn-info btn-block">Add</button>
        </div>            
    </div>
</div>