<div class="container register">
    <div class="row">
        <div class="panel panel-primary">
            <div class="panel-body">
                <div class="form-group">
                    <h2>Register</h2>
                </div>
                <div class="form-group">
                    <label class="control-label" for="signupName">Username</label>
                    <input id="signupName" type="text" maxlength="50" class="form-control">
                </div>                    
                <div class="form-group">
                    <label class="control-label" for="signupPassword">Password</label>
                    <input id="signupPassword" type="password" name="pass_confirmation" maxlength="25" class="form-control" placeholder="" length="40" required >
                </div>
                <div class="form-group">
                    <label class="control-label" for="signupPasswordagain">Password again</label>
                    <input id="signupPasswordagain" type="password" name="pass" maxlength="25" class="form-control" required>
                </div>
                <div class="form-group">
                    <button id="btnRegister" type="submit" class="btn btn-info btn-block">Create your account</button>
                </div>
                <p>Already have an account? <a href="#/login">Sign in</a></p>                
            </div>
        </div>
    </div>
</div>